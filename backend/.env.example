# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=healthsync_platform

# Security Configuration
JWT_SECRET=healthsync-jwt-secret-key-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# MinIO Configuration (Self-hosted file storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=health-documents
MINIO_SECURE=false

# Google Fit Integration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/wearable/google/callback

# Fitbit Integration
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret
FITBIT_REDIRECT_URI=http://localhost:8000/api/wearable/fitbit/callback

# OpenAI Configuration (Optional - fallback for local LLM)
OPENAI_API_KEY=sk-your-openai-api-key-if-needed

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Medical Data Configuration
ENABLE_OCR=true
ENABLE_MEDICAL_NLP=true
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf,jpg,jpeg,png

# Wearable Data Configuration
WEARABLE_DATA_RETENTION_DAYS=365
SYNC_INTERVAL_HOURS=24

# Report Generation
REPORT_TEMPLATE_PATH=./templates/reports
CHART_DPI=300
REPORT_LOGO_PATH=./assets/logo.png