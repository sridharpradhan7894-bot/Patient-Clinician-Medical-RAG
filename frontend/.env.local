# Backend API Configuration
REACT_APP_BACKEND_URL=http://localhost:8000

# Application Configuration
REACT_APP_NAME=HealthSync Platform
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Patient-Clinician Health Data Management Platform

# Feature Flags
REACT_APP_ENABLE_WEARABLES=true
REACT_APP_ENABLE_AI_ANALYSIS=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_MOBILE_CAMERA=true

# UI Configuration
REACT_APP_THEME=healthcare
REACT_APP_PRIMARY_COLOR=#2563eb
REACT_APP_SECONDARY_COLOR=#10b981

# Development Configuration
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# PWA Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_OFFLINE_SUPPORT=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png